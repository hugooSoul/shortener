<% if user_signed_in? %>
  <h2><%= current_user.email %></h2>
<% else %>
    <h2>Weelcome to Shortener page</h2>
<% end %>

<% if user_signed_in? %>
  <% current_user.urls.each do |url| %>
    <ul>
      <li><%= url.name %> - <%= link_to url.short_url, url.long_url, target: :_blank %> - <%= url.long_url %></li>
     </ul>
  <% end %>
<% end %>

<%= link_to 'Create another link', new_url_path %>

<% if user_signed_in? %>
  <%= button_to "Sing out", destroy_user_session_path, method: :delete  %>
<% else %>
    <%= link_to "Sign_in", new_user_session_path %>
<% end %>